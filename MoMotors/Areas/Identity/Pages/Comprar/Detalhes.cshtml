@using MoMotors.Models
@{

    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";

}
@model VeiculosModel



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Shop Homepage - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico">
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha384-...." crossorigin="anonymous">

    <style>

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            max-width: 1200px;
            margin: 20px auto;
        }

        .left {
            width: 60%;
        }

        .main-image {
            width: 100%;
            height: 400px;
            object-fit: cover;
        }

        .thumbnails {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .thumbnail {
            width: 19%;
            height: 100px;
            object-fit: cover;
            cursor: pointer;
        }

        .right {
            width: 40%;
            padding: 20px;
        }

        h1 {
            font-size: 32px;
            font-weight: bold;
            color: #333;
        }

        .info {
            font-size: 18px;
            color: #777;
            margin-top: 10px;
        }

        .price {
            font-size: 28px;
            font-weight: bold;
            color: #333;
            margin-top: 20px;
        }

        .favorite {
            display: flex;
            align-items: center;
            background-color: #f0f0f0;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            margin-top: 20px;
            cursor: pointer;
        }

            .favorite i {
                color: #f44336;
                margin-right: 10px;
            }

        .details {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .details td {
                padding: 10px;
                border: 1px solid #f0f0f0;
            }

                .details td:first-child {
                    font-weight: bold;
                    color: #333;
                    width: 40%;
                }

                .details td:last-child {
                    color: #777;
                    width: 60%;
                }


        .gallery {
            display: flex;
            flex-direction: column;
            max-width: 800px;
            margin: 20px auto;
        }

        .main {
            width: 100%;
            height: 500px;
        }

            .main img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .thumbnails {
            display: flex;
            justify-content: space-between;
            margin-top: 10px;
        }

        .thumbnail {
            width: 24%;
            height: 100px;
            object-fit: cover;
            cursor: pointer;
            border: 2px solid #f0f0f0;
            border-radius: 5px;
        }

            .thumbnail:hover {
                border-color: #333;
            }

    </style>

</head>

<body>
    <div class="container" style="margin-top: 5%;">
        <div class="left" ">
            
            <div class="gallery">
                <div class="main">
                    <img src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="Porsche Macan 5-door SUV blue" id="main-image">
                </div>
                <div class="thumbnails">
                    <img src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="Front view" class="thumbnail" onclick="changeImage(this)">
                    <img src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="Back view" class="thumbnail" onclick="changeImage(this)">
                    <img src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="Interior view" class="thumbnail" onclick="changeImage(this)">
                    <img src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="Engine view" class="thumbnail" onclick="changeImage(this)">
                </div>
            </div>


        </div>


        <div class="right">
            <h1>@Model.Marca @Model.Modelo @Model.Cor</h1>
            <p class="info">@Model.AnoECombustivel.Substring(0, 4) • @Model.Quilometragem km </p>
            <p class="price">@Model.Preco</p>
            <button class="favorite"><i class="fas fa-heart"></i> Adicionar aos favoritos</button>
            <table class="details">
                <tr>
                    <td>Marca:</td>
                    <td>@Model.Marca</td>
                </tr>
                <tr>
                    <td>Modelo:</td>
                    <td>@Model.Modelo</td>
                </tr>
               
                <tr>
                    <td>Transmissão:</td>
                    <td>@Model.Cambio</td>
                </tr>
                <tr>
                    <td>Condição:</td>
                    <td>@Model.Condicao</td>
                    
                </tr>
                <tr>
                    <td>Ano:</td>
                    <td>@Model.AnoECombustivel.Substring(0, 4)</td>
                </tr>
                <tr>
                    <td>Quilometragem:</td>
                    <td>@Model.Quilometragem</td>
                </tr>
                <tr>
                    <td>Tipo de combustível:</td>
                    
                        @if (Model.AnoECombustivel[5] == '1')
                        {
                        <td>
                            Gasolina
                        </td>
                        }
                        else if (Model.AnoECombustivel[5] == '3')
                        {
                            <td>
                            Diesel
                            </td>
                        }
                        else
                        {
                            <td>
                            Etanol
                            </td>
                        }

                    
                    
                    
                    
                </tr>
               
              
                <tr>
                    <td>Cor:</td>
                    <td>@Model.Cor</td>
                </tr>

                <tr>
                    <td>Valor na tabela FIPE:</td>
                    <td>@Model.FIPE</td>

                </tr>
                
            </table>
        </div>
    </div>

    <script>


        function changeImage(thumb) {
            // get the src attribute of the clicked thumbnail
            let src = thumb.getAttribute("src");
            // get the main image element by id
            let main = document.getElementById("main-image");
            // update the src attribute of the main image with the thumbnail src
            main.setAttribute("src", src);
        }

    </script>

</body>
</html>